{
  "version": "0.1.0",
  "name": "counter_program",
  "instructions": [
    {
      "name": "initialize",
      "accounts": [
        {
          "name": "counter",
          "isMut": true,
          "isSigner": false,
          "docs": ["The counter account to initialize"]
        },
        {
          "name": "user",
          "isMut": true,
          "isSigner": true,
          "docs": ["The user initializing the counter"]
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "initialValue",
          "type": "u64",
          "docs": ["The initial value for the counter"]
        }
      ]
    },
    {
      "name": "increment",
      "accounts": [
        {
          "name": "counter",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "authority",
          "isMut": false,
          "isSigner": true
        }
      ],
      "args": []
    },
    {
      "name": "decrement",
      "accounts": [
        {
          "name": "counter",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "authority",
          "isMut": false,
          "isSigner": true
        }
      ],
      "args": [
        {
          "name": "amount",
          "type": "u64"
        }
      ]
    }
  ],
  "accounts": [
    {
      "name": "Counter",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "authority",
            "type": "publicKey",
            "docs": ["The authority that can modify this counter"]
          },
          {
            "name": "count",
            "type": "u64",
            "docs": ["The current count value"]
          },
          {
            "name": "bump",
            "type": "u8"
          }
        ]
      }
    }
  ],
  "types": [
    {
      "name": "CounterConfig",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "maxValue",
            "type": "u64"
          },
          {
            "name": "minValue",
            "type": "u64"
          },
          {
            "name": "enabled",
            "type": "bool"
          }
        ]
      }
    },
    {
      "name": "Operation",
      "type": {
        "kind": "enum",
        "variants": [
          {
            "name": "Add"
          },
          {
            "name": "Subtract"
          },
          {
            "name": "Reset",
            "fields": [
              {
                "name": "newValue",
                "type": "u64"
              }
            ]
          }
        ]
      }
    }
  ],
  "errors": [
    {
      "code": 6000,
      "name": "Overflow",
      "msg": "Counter overflow occurred"
    },
    {
      "code": 6001,
      "name": "Underflow",
      "msg": "Counter underflow occurred"
    },
    {
      "code": 6002,
      "name": "Unauthorized",
      "msg": "Unauthorized access"
    }
  ],
  "events": [
    {
      "name": "CounterChanged",
      "fields": [
        {
          "name": "counter",
          "type": "publicKey"
        },
        {
          "name": "oldValue",
          "type": "u64"
        },
        {
          "name": "newValue",
          "type": "u64"
        }
      ]
    }
  ]
}
